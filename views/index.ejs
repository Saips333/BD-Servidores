<!DOCTYPE html>
<html>
<head>
  <title>Remuneração de Professores</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/servidores">Servidores</a></li>
      </ul>
    </nav>  
  </div>
  <h1>Remuneração de Professores</h1>
  <div style="width: 800px;">
    <canvas id="myChart" width="50" height="50"></canvas>
  </div>

  <script>
    var nomes = [];
    var cpfs = [];

    // Dados vindos do servidor
    var professores = JSON.parse('<%- JSON.stringify(results) %>');

    professores.forEach(function(professor) {
      nomes.push(professor.nome);
      cpfs.push(professor.cpf);
    });

    var ctx = document.getElementById('myChart').getContext('2d');

    var chart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: nomes,
        datasets: [{
          label: 'Salário dos Professores',
          data: cpfs,
          backgroundColor: 'rgba(75, 192, 192, 0.2)',
          borderColor: 'rgba(75, 192, 192, 1)',
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  </script>
</body>
</html>
